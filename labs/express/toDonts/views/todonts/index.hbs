<h1>You have {{toDont.length}} Tasks not to Do!</h1>
<a href="/todonts/new">Add a new not to Do!</a>
{{#each toDont}}
    <ul>
    <li><h4><a href="/todonts/{{@index}}">{{description}}</a></h4></li>
    <li>Location: {{location}}</li>
    <li>Urgent: {{urgent}}</li>
    </ul>
    <a href="/todonts/{{@index}}/edit">Edit</a>
    <form action="/todonts/{{@index}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete"/>
    </form>
{{/each}}
