<h1>Edit {{Dont.description}}</h1>

<div class="row">
  <form action="/todonts/{{Dont.id}}?_method=PUT" method="POST">
    <div>
      <label for="description">Description:</label>
      <input type="text" name="description" value="{{Dont.description}}">
    </div>
    <div>
      <label for="location">Location:</label>
      <input type="text" name="location" value="{{Dont.location}}">
    </div>
    <div>
      <label for="urgent">Urgent:</label>
      <span>yes</span><input type='radio' name='urgent' value="true" checked>
        <span>no</span><input type='radio' name='urgent' value="false"/>
    </div>
    <div>
      <input type="submit" value="Update To Dont">
    </div>
    </form>
    <form action="/todonts/{{Dont.id}}/edit?_method=DELETE" method="POST">
    <input type="submit" value="Delete"/>
    </form>
    <a href="/todonts">Return to List</a>
</div>