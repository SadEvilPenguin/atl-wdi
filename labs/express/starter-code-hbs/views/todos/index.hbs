<h1> You have {{total}} Todos! </h1>
<h3><a href="/todos/new">Add a New Todo</a></h3>
<ul>
  {{#each todos}}
    <li><h3><a href="/todos/{{@index}}">{{description}}</a></h3></li>
    {{#if location}}
    <li>Location: {{location}}</li>
    {{/if}}
    <li>Urgent: {{urgent}}</li>
    <br>
    <div><a href="/todos/{{@index}}/edit">Edit</a></div>
    <form action="/todos/{{@index}}?_method=DELETE" method="POST">
      <input type="submit" value="DELETE"/>
    </form>
    <hr>
  {{/each}}
</ul>
