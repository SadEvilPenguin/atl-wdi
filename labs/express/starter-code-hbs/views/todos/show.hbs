{{#if error}}
<h1>{{error}}</h1>
{{else}}
<h1>{{todo.description}}</h1>
{{#if todo.location}}
<h3>Location: {{todo.location}}</h3>
{{/if}}
<h3>Urgent: {{todo.urgent}}</h3>
<div><a href="/todos/{{id}}/edit">Edit</a></div>
    <form action="/todos/{{id}}?_method=DELETE" method="POST">
      <input type="submit" value="DELETE"/>
    </form>
<a href="/todos">Return ToDos</a>
{{/if}}