<h1>Edit {{todo.description}}</h1>

<div class="row">
  <form action="/todos/{{todo.id}}?_method=PUT" method="POST">
    <div>
      <label for="description">description:</label>
      <input type="text" name="description" value="{{todo.description}}">
    </div>
    <div>
      <label for="location">location:</label>
      <input type="text" name="location" value="{{todo.location}}">
    </div>
    <div>
      <label for="urgent">urgent:</label>
      <span>yes</span><input type='radio' name='urgent' value="true" checked>
  <span>no</span><input type='radio' name='urgent' value="false"/>
    </div>
    <div>
      <input type="submit" value="Update Todo">
    </div>
  </form>
</div>