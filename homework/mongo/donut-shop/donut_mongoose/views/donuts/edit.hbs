<main>

	<h2>EDIT THIS DONUT!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="donut-container-show">


		<form action="/{{donut._id}}?_method=PUT" method="POST">
    <label>Name: </label>
    <input type="text" name="name" value="{{donut.name}}"><br>
    <label>Description: </label>
    <input type="text" name="description" value="{{donut.description}}"><br>
	<label>Image: </label>
    <input type="text" name="img" value="{{donut.img}}"><br>
	<label>Price: </label>
    <input type="number" name="price" value="{{donut.price}}"><br>
	<label>Qunatity: </label>
    <input type="number" name="qty"value="{{donut.qty}}"><br>
    <button type="submit">Create</button>
</form>


		<div id="img-preview">
			<img src="{{donut.img}}">
		</div>

	</div>
</main>
