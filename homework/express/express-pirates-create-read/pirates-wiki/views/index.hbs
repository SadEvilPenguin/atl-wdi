<h1>Total Pirates: {{pirate.length}}</h1>
<ul class="pirates">
  {{#each pirate}}
    <li>Pirate: <a href="/pirates/{{@index}}">{{name}}</a></li>
    <div><a href="/pirates/{{@index}}/edit">Edit</a></div>
    <form action="/pirates/{{@index}}?_method=DELETE" method="POST">
      <input type="submit" value="DELETE"/>
    </form>
    <hr>
  {{/each}}
</ul>